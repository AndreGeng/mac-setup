{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "explorer.openAction.strategy":"previousWindow",
  "explorer.width": 30,
  "explorer.position": "floating",
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings.global": {
    "<space>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "u": "gotoParent",
    "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
  }
}
